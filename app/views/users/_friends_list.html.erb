<div class="row">
  <div class='col-9'>
    <table class="table table-dark custom-table">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
            <% @friends.each do |friend| %>
                <tr>
                    <td><%= friend.full_name %></td>
                    <td><%= friend.email %></td>
                    <td><%= link_to 'View Profile', user_path(friend), class: "btn btn-sm btn-primary" %>
                    <%= link_to 'Remove friend',friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger" %></td>
                </tr>
            <% end %>
        </tr>
      </tbody>
    </table>
  </div>
</div>