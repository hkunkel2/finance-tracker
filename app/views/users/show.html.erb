<h2>User details</h2>

<div class="card card-header results-block">
    <table class= "col-md-12">
    <tbody>
        <tr>
            <td><strong>Name: </strong><%= @user.full_name %></td>
            <td><strong>Emails: </strong><%= @user.email %></td> 
            <td>
                <% if current_user.not_friends_with?(@user.id) %>
                    <%= link_to 'Follow Friend', friendships_path(friend: @user), class: "btn btn-sm btn-primary", method: :post %>
                <% else %>
                    <span class="badge badge-secondary">
                        You are friends
                    </span>
                <% end %>
            </td>
        </tr>
    </tbody>
    </table>  
</div>
<% if @user.stocks.any? %>
<%= render 'stocks/list' %>
<% else %>
<h4> This user is not tracking any stocks</h2>
<% end %>
